<server description="defaultServer">
    <variable name="DB_NAME" defaultValue="jbrew"/>
    <variable name="DB_SERVER_NAME" defaultValue="jbrew-pg-db"/>
    <variable name="DB_PORT_NUMBER" defaultValue="5432"/>
    <variable name="DB_USER" defaultValue="jbrewuser"/>
    <variable name="DB_PASSWORD" defaultValue="jbrewUser2525"/>
    <featureManager>
        <feature>webProfile-10.0</feature>
    </featureManager>
    <basicRegistry id="defaultBasicRegistry" realm="BasicRealm">
        <user name="username" password="password" />
    </basicRegistry>
    <keyStore id="defaultKeyStore" password="password" />
    <httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="9080" httpsPort="9443" />
    <webApplication location="SoccerSystem-app.war" contextRoot="/"/>
    <library id="PostgresLib">
        <fileset dir="${server.config.dir}/jdbc" includes="postgresql-42.7.7.jar"/>
    </library>

    <dataSource id="SoccerDS" jndiName="jdbc/SoccerDS">
        <jdbcDriver libraryRef="PostgresLib"/>
        <properties.postgresql
                databaseName="${DB_NAME}"
                serverName="${DB_SERVER_NAME}"
                portNumber="${DB_PORT_NUMBER}"
                user="${DB_USER}"
                password="${DB_PASSWORD}"/>
    </dataSource>
</server>
